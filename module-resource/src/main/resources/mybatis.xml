<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="kotlin" targetRuntime="MyBatis3Kotlin" defaultModelType="flat">

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="javaFileEncoding" value="utf-8"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/market?serverTimezone=UTC"
                        userId="root"
                        password="123456@yyM">
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.github.luoyemyy.resource.entity" targetProject="src/main/java"/>

        <javaClientGenerator targetPackage="com.github.luoyemyy.resource.mapper" targetProject="src/main/java"/>

        <table tableName="role">
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
        </table>
        <table tableName="user_role">
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
        </table>
        <table tableName="resource">
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
        </table>
        <table tableName="role_resource">
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
        </table>
    </context>
</generatorConfiguration>